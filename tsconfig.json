{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "#app": ["node_modules/nuxt/dist/app"],
      "#app/*": ["node_modules/nuxt/dist/app/*"]
    },
    "types": ["@nuxt/types", "@nuxtjs/i18n", "vue3-toastify", "nuxt/config", "vue-tsc"]
  },
  "include": ["types/**/*.d.ts", "plugins/**/*", "components/**/*", "pages/**/*", "stores/**/*", "nuxt.config.ts"],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
